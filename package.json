{
  "name": "@sharetech-labs/logtree",
  "version": "0.1.3",
  "description": "Structured decision tracing with nested log trees. One method, automatic scoping, JSON/ASCII/Mermaid output.",
  "author": "Sharetech Labs",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "logging",
    "api",
    "client"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sharetech-labs/logtree.git"
  },
  "bugs": {
    "url": "https://github.com/sharetech-labs/logtree/issues"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup",
    "dev": "vitest",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "ci": "npm run build",
    "prepublishOnly": "npm run ci",
    "check-exports": "npx @arethetypeswrong/cli --pack"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@vitest/coverage-v8": "^4.0.18",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
